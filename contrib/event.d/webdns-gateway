description	"webdns-gateway"
author		"Jeff Lindsay <progrium@gmail.com>"

start on runlevel 2
start on runlevel 3

stop on runlevel 0
stop on runlevel 1
stop on runlevel 4
stop on runlevel 5
stop on runlevel 6

chdir /runproc/webdns
script
  . ./environ
  exec twistd --pidfile=$PIDFILE -ny gateway >> $LOGFILE
end script
respawn
